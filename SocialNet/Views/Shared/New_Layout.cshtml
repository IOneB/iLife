<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>


<body>


    <div class="mainflex d-flex align-items-stretch">

        <div class="submainflex d-flex flex-row">
            <div class="subbodyflex d-flex flex-column">
                <div class="d-flex top-menu">
                    <button type="button" class="topitem1 btn button">UserName</button>
                    <div class="mr-auto"></div>
                    <button type="button" class="btn button">Add Post</button>
                    <button type="button" class="btn button">Log In</button>
                </div>

                <div class="bodyflex d-flex flex-row">
                    <div class="leftpanel p-2">
                        <div class=" d-flex flex-column">
                            <div class="p-2">
                                <div class="avatar-container">
                                    <img id="defaultavatar" alt="DefaultAvatar" class="img-thumbnail img-fluid" src="@Url.Content("~/Content/default-avatar.png")" />
                                </div>

                            </div>

                            <button type="button" class="btn button">Contacts</button>
                            <button type="button" class="btn button">Profile Settings</button>

                        </div>
                    </div>
                    <div class="rightpanel">@Html.Partial("Index")</div>
                </div>
            </div>

        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/scripts/jquery-3.0.0.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/Scripts/VanyaPowerScript( ͡° ͜ʖ ͡°).js")
</body>
</html>
